{
  "functions": {
    "source": "functions",
    "predeploy": []
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "scripts/**"
    ],
    "rewrites": [
      {
        "source": "/chat/**",
        "destination": "/community/**"
      }
    ],
    "redirects": [
      {
        "source": "/chat",
        "destination": "/community",
        "type": 301
      }
    ]
  }
}

